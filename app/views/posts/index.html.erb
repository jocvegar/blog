<h1 id="page_title">Lo Escrito</h1>

<div id= "post_wrapper" class="skinny_wrapper wrapper_padding">
	<% @posts.each do |post| %>
	<div class="post">
		<p class="date"><%= post.created_at.strftime('%A, %d %b %Y') %></p>
		<h2><a href="#"><%= link_to post.title, post %></a></h2>
		<hr>
	</div>
	<% end %>
</div>

<div class="pagination">
	<span class="previous_page disabled">Anterior</span>
	<em class="current">1</em>
	<a rel="next" href="#">2</a>
	<a href="#" class="next_page">Siguiente</a>
</div>