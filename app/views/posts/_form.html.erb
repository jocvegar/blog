<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<h2><%= pluralize(@post.errors.count, "error") %> No se pudo salvar este post:</h2>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<%= f.label :title, " Title" %> <br>
	<%= f.text_field :title %>

	<br>

	<%= f.label :content, " Write Here" %> <br>
	<%= f.text_area :content %>

	<br>
	<br>

	<div id="admin_links">
		<%= f.submit %>
	</div>
<% end %>
